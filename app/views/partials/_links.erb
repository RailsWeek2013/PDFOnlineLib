<p>
	<% if user_signed_in? && request.original_fullpath != "/profile"%>
	<%= link_to "Home" , user_root_path %>
	<%end%>
	<% if request.original_fullpath != "/"%>
	<%= link_to "Main" , root_path %>
	<%end%>
	<% if user_signed_in? %>
	<%= link_to "Logout" , destroy_user_session_path, method: :delete %>
	<%= link_to "View PDF-Files" , pdf_files_path %>
	<% else %>
	<%= link_to "Login" , new_user_session_path %> <%= link_to "Register" , new_user_registration_path%>
	<% end %>
	<%if request.original_fullpath != "/gallery" && request.original_fullpath != "/pages/search" %>
	<%= link_to "View Public Gallery" , gallery_path %>
	<%end%>
	<% if user_signed_in? %>
	<br><%= "Currently logged in as: #{current_user.user_name}" %>
	<%end%>
</p>